{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "ES2021", "ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/worker",
    "rootDir": "./src",
    "jsx": "react"
  },
  "include": ["src/worker/**/*", "src/lib/**/*"],
  "exclude": [
    "node_modules",
    ".next",
    "src/lib/remix-engine/provider.tsx"
  ]
}
